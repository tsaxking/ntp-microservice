{
	"name": "boilerplate-microservice",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"build": "tsc",
		"start": "node dist/index.js",
		"build:watch": "tsc --watch --preserveWatchOutput",
		"start:watch": "nodemon dist/index.js",
		"format": "prettier --write .",
		"lint": "eslint .",
		"db:start": "docker compose up",
		"db:push": "drizzle-kit push",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"dev": "pnpm build && concurrently \"pnpm build:watch\" \"pnpm start:watch\"",
		"script": "pnpm build && node dist/scripts/index.js",
		"test": "vitest run"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"packageManager": "pnpm@10.13.1",
	"engines": {
		"node": ">=22.12.0"
	},
	"dependencies": {
		"@inquirer/prompts": "^7.6.0",
		"chalk": "^5.4.1",
		"cli-table": "^0.3.11",
		"concurrently": "^9.2.0",
		"dotenv": "^17.2.0",
		"drizzle-kit": "^0.31.4",
		"drizzle-orm": "^0.38.3",
		"drizzle-struct": "github:tsaxking/drizzle-struct",
		"drizzle-zod": "^0.6.1",
		"eslint": "^9.33.0",
		"eslint-config-prettier": "^10.1.8",
		"fuzzy-search": "^3.2.1",
		"globals": "^16.3.0",
		"nodemon": "^3.1.10",
		"postgres": "^3.4.7",
		"prettier": "^3.6.2",
		"redis": "^5.6.0",
		"ts-utils": "github:tsaxking/global-ts-utilities",
		"typescript-eslint": "^8.37.0",
		"uuid": "^11.1.0",
		"vitest": "^3.2.4",
		"zod": "^4.0.5"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.33.0",
		"@types/cli-table": "^0.3.4",
		"@types/express": "^5.0.3",
		"@types/fuzzy-search": "^2.1.5",
		"@types/node": "^24.0.14"
	}
}
